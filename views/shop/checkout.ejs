<head>
   <%- include('../partials/header.ejs') %>
</head>

<%- include('../includesUser/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
    
        <main>
            <ul class="cart__item-list">
                <% postedServices.forEach(p => { %>
                    <li class="cart__item">
                        <h1><%= p.postedServiceId.title %></h1>
                        <h2>Quantity: <%= p.quantity %></h2>
                    </li>
                <% }) %>
            </ul>
            <hr>
            <div class="centered">
                <h2>Total: $ <%= totalSum %></h2>
            </div>
            <div class="centered">
                <button id="order-btn" class="btn">ORDER</button>
                <script src="https://js.stripe.com/v3/"></script>
                <script>
                    var stripe = Stripe('pk_test_51JgEPqCuZRlwEilUPBWaqwcyDlEVomx3UQSuwc6u0vbr34j7AeQF5Kde18EruBwDPzJajjHLpPyw91wR8QEohVWe00RNyXvSvg');
                    var orderBtn = document.getElementById('order-btn');
                    orderBtn.addEventListener('click', function() {
                        stripe.redirectToCheckout({
                            sessionId: '<%= sessionId %>'
                        })
                    })
                </script>
            </div>
        </main>
        <%- include('../includesUser/end.ejs') %>

        <footer>
            <%- include('../partials/footer.ejs') %>
        </footer>
