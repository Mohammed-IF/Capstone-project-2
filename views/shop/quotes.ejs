<%- include('../includesUser/head.ejs') %>
    <link rel="stylesheet" href="/css/postedService.css">
    </head>

    <body>
        <%- include('../includesUser/navigation.ejs') %>

            <main>
                <% if (prods.length > 0) { %>
                    <div class="grid">
                        <% for (let quotes of prods) { %>
                            <article class="card quote-item">
                              <div class="card__content">
                                <p class="quote__description">
                                    <%= quote.description %>
                                </p>
                            </div>
                                <div class="card__image">
                                    <img src="<%= quote.image.url %>" alt="<%= quote.title %>">
                                </div>
                               
                                <div class="card__actions">
                                    <a href="/shop/edit-quote/<%= quote._id %>?edit=true" class="btn">Edit</a>
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                    <input type="hidden" value="<%= quote._id %>" name="quoteID">
                                    <button class="btn" type="button" onclick="deleteQuote(this)">Delete</button>
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <section class='pagination'>
                        <%- include('../includesUser/pagination.ejs', { currentPage: currentPage, previousPage: previousPage, nextPage: nextPage, hasPreviousPage: hasPreviousPage, hasNextPage: hasNextPage, lastPage: lastPage}) %>
                    </section>
                    <% } else { %>
                        <h1>No Products Found!</h1>
                        <% } %>
            </main>
            <%- include('../includesUser/end.ejs') %>
            <script src='/js/freelancer.js'></script>
