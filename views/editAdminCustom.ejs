<head>
    <%- include('./partials/header.ejs') %>
 </head>
 <%- include('./includesUser/head.ejs') %>
    </head>
<div class="container mt-5">
    <h3 class="my-3">Edit the service...  </h3>
    <form action="/editAdminCustom/<%= custom._id %>" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <input type="text" value="<%= custom.title %>" name="title" placeholder="Enter Title" class="form-control" required>
        <textarea name="content" cols="30" rows="10" class="mt-3 form-control" placeholder="Enter Content Here..."
            required><%= custom.content %></textarea>
            <div class="border-bottom p-3" style= "left: -1em;" >
                <label>Choose a category:</label>
                        <div class="row">
                           <div class="form-group col-md-6" style= "left: -1em;">
                         <select name="category" class="form-control" required  > 
                                 <option selected>Select...</option>
                                 <option>Graphics & Design</option>
                                 <option>Digital Marketing</option>
                                 <option>Writing & Translation</option>
                                 <option>Video & Animation</option>
                                 <option>Music & Audio</option>
                                 <option>Programming & Tech</option>
                                 <option>Business</option>
                                 <option>Lifestyle</option>
                                 <option> Sitemap </option>
                              </select>
                           </div>
                           
                        </div>
                     </div> 
                       <div>
                        <label>Edit the service days: </label>
                        <input name="day" value= "<%= custom.day %>" cols="30" rows="10" class="mt-3 form-control" value= "<%= custom.day %>" placeholder="Enter the service days Here..." required> </input>
                       </div>
                       <div>
                        <label>Edit the service price: </label>
                        <input name="price" value="<%= custom.price %>" placeholder="Enter service price" class="form-control" required ></input>
                       </div>
        <input type="submit" value="Save Changes" class="mt-5 btn btn-md btn-danger" style="background-color: blue; color: white;">
    </form>
</div>
<hr>
<%- include('./includesUser/end.ejs') %>

        <footer>
            <%- include('./partials/footer.ejs') %>
        </footer>