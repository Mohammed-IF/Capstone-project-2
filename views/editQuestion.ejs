<div class="container mt-5">
    <h3 class="my-3">Edit the Question...  </h3>
    <form action="/editQuestion/<%= question._id %>" method="POST">
        <input type="text" value="<%= question.title %>" name="title" placeholder="Enter Title" class="form-control" required>
        <textarea name="content" cols="30" rows="10" class="mt-3 form-control" placeholder="Enter Content Here..."
            required><%= question.content %></textarea>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <input type="submit" value="Save Changes" class="mt-5 btn btn-md btn-danger">
    </form>
</div>