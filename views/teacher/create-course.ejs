<head>
  <%- include('../partials/teacherHeader.ejs') %>
</head>
<hr>

<div class="container">
<div class="row">
  <div class="col-lg-6 col-md-offset-3">

    <h1>Create Course</h1>
    <form  method="post" action="/create-course" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Title:</label>
        <input type="text" class="form-control" name="title"  value= "<%= oldInput.title %>">
      </div>

      <div class="form-group">
        <label for="name">Course image:</label>
        <input type="file" class="form-control" name="image" >
      </div>

      
      <div class="border-bottom p-3" style= "left: -1em;" >
        <label>Choose a category:</label>
                <div class="row">
                   <div class="form-group col-md-6" style= "left: -1em;">
                 <select name="category" class="form-control" required  > 
                         <option selected>Select...</option>
                         <option>Graphics & Design</option>
                         <option>Digital Marketing</option>
                         <option>Writing & Translation</option>
                         <option>Video & Animation</option>
                         <option>Music & Audio</option>
                         <option>Programming & Tech</option>
                         <option>Business</option>
                         <option>Lifestyle</option>
                         <option> Sitemap </option>
                      </select>
                   </div>
                   
                </div>
             </div>

      <div class="form-group">
        <label for="name">Price:</label>
        <input type="text" class="form-control" name="price" value= "<%= oldInput.price %>">
      </div>

      <div class="form-group">
        <label for="name">Description:</label>
        <input type="text" class="form-control" name="description" value= "<%= oldInput.description %>">
      </div>

      <div class="form-group">
        <label for="name">Wistia ID:</label>
        <input type="text" class="form-control" name="wistiaId" value= "<%= oldInput.wistiaId %>">
      </div>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <button type="submit" class="btn" style="background-color: blue; color: white;">Add Course</button>

    </form>
</div>
</div>
</div>
<hr>
<footer>
  <%- include('../partials/footer.ejs') %>
</footer>
<%- include('../includesUser/end.ejs') %>