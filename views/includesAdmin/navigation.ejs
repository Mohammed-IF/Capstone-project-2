<body>
<div class="backdrop"></div>
<header class="main-header">
    <button id="side-menu-toggle">Menu</button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/adminPages' ? 'active' : '' %>" href="/adminPages">Freelancer's Dashboard</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/adminPages/postedServices' ? 'active' : '' %>" href="/adminPages/postedServices">PostedServices</a>
            </li>
            <% if (isAuthenticated) { %>
                
                <li class="main-header__item">
                    <a class="<%= path === '/admin/add-postedService' ? 'active' : '' %>" href="/admin/add-postedService">Add PostedService
                    </a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/admin/postedServices' ? 'active' : '' %>" href="/admin/postedServices">Freelancer PostedServices
                    </a>
                </li>
            <% } %>
        </ul>
        <ul class="main-header__item-list">
            <% if (!isAuthenticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/login3' ? 'active' : '' %>" href="/login3">Login</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/signup3' ? 'active' : '' %>" href="/signup3">Signup</a>
                </li>
            <% } else { %>
                <li class="main-header__item">
                    <form action="/logout3" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                        <button type="submit">Logout</button> 
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
</header>

<nav class="mobile-nav">
    <ul class="mobile-nav__item-list">
        <li class="mobile-nav__item">
            <a class="<%= path === '/adminPages' ? 'active' : '' %>" href="/adminPages">Shop</a>
        </li>
        <li class="mobile-nav__item">
            <a class="<%= path === '/adminPages/postedServices' ? 'active' : '' %>" href="/adminPages/postedServices">PostedServices</a>
        </li>
        <% if (isAuthenticated) { %>
            <li class="mobile-nav__item">
                <a class="<%= path === '/adminPages/admin/add-postedService' ? 'active' : '' %>" href="/adminPages/admin/add-postedService">Add PostedService
                </a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/adminPages/admin/postedServices' ? 'active' : '' %>" href="/adminPages/admin/postedServices">Freelancer PostedServices
                </a>
            </li>
        <% } %>
        <% if (!isAuthenticated) { %>
            <li class="mobile-nav__item">
                <a class="<%= path === '/login3' ? 'active' : '' %>" href="/login3">Login</a>
            </li>
            <li class="mobile-nav__item">
                <a class="<%= path === '/signup3' ? 'active' : '' %>" href="/signup3">Signup</a>
            </li>
        <% } else { %>
            <li class="mobile-nav__item">
                <form action="/logout3" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <button type="submit">Logout</button>
                </form>
            </li>
        <% } %>
    </ul>
</nav>
</body>
